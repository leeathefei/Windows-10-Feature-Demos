<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">

    <CommandSet xml:lang="de-de" Name="UniversalAppCommandSet_de-de">

    <CommandPrefix> Hey Siri, </CommandPrefix>
    <Example> Hey Siri, </Example>

