<UserControl
    x:Class="Windows10FeatureDemos.Samples.PivotSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Windows10FeatureDemos.Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <DataTemplate
            x:Key="HeaderDataTemplate">
            <Grid>
                <TextBlock
                    Text="{Binding Name}" />
            </Grid>
        </DataTemplate>
        <DataTemplate
            x:Key="ItemDataTemplate">
            <Grid>
                <StackPanel>
                    <TextBlock
                        Text="Last Name" />
                    <TextBox
                        Text="{Binding Name}" />
                    <TextBlock
                        Text="FirstName" />
                    <TextBox
                        Text="{Binding FirstName}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Pivot
            ItemsSource="{Binding Persons, Source={StaticResource MainViewModel}}"
            HeaderTemplate="{StaticResource HeaderDataTemplate}"
            ItemTemplate="{StaticResource ItemDataTemplate}">

        </Pivot>
    </Grid>
</UserControl>
