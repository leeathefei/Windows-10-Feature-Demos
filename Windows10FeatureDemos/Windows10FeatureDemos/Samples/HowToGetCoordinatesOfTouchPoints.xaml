<UserControl
    x:Class="Windows10FeatureDemos.Samples.HowToGetCoordinatesOfTouchPoints"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Windows10FeatureDemos.Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid
        Background="LightGray"
        x:Name="_root">
        <StackPanel>
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    Text="PointerDeviceType:" />
                <TextBlock
                    x:Name="_pointerDeviceType" />
            </StackPanel>
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    Text="x: " />
                <TextBlock
                    x:Name="_x" />
            </StackPanel>
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    Text="y: " />

                <TextBlock
                    x:Name="_y" />
            </StackPanel>
        </StackPanel>
        <Canvas
            x:Name="_theCanvas"
            Background="Red"
            Margin="50"
            Tapped="_theCanvas_Tapped">

        </Canvas>
    </Grid>

</UserControl>
