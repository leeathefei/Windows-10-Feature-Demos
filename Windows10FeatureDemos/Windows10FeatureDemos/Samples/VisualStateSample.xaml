    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup
                x:Name="ColumnDesigns">
                <VisualState
                    x:Name="ThreeColumnsState">
                    <VisualState.Setters>
                        <Setter
                            Target="_3ColumnDesign.Visibility"
                            Value="Visible" />
                        <Setter
                            Target="_2ColumnDesign.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="_1ColumnDesign.Visibility"
                            Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState
                    x:Name="TwoColumnsState">
                    <VisualState.Setters>
                        <Setter
                            Target="_3ColumnDesign.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="_2ColumnDesign.Visibility"
                            Value="Visible" />
                        <Setter
                            Target="_1ColumnDesign.Visibility"
                            Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState
                    x:Name="OneColumnsState">
                    <VisualState.Setters>
                        <Setter
                            Target="_3ColumnDesign.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="_2ColumnDesign.Visibility"
                            Value="Collapsed" />
                        <Setter
                            Target="_1ColumnDesign.Visibility"
                            Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
